{% extends 'base.html.twig' %}

{% block title %}Competences index{% endblock %}

{% block body %}
    <h1>Competences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Langage</th>
                <th>Img</th>
                <th>Fontawesome</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.id }}</td>
                <td>{{ competence.langage }}</td>
                <td>{{ competence.img }}</td>
                <td>{{ competence.fontawesome }}</td>
                <td>{{ competence.color }}</td>
                <td>
                    <a href="{{ path('competences_show', {'id': competence.id}) }}">show</a>
                    <a href="{{ path('competences_edit', {'id': competence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('competences_new') }}">Create new</a>
{% endblock %}
